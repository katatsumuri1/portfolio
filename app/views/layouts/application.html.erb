<!DOCTYPE html>
<html>
  <head>
    <title>失敗ノート</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
    <body>
      <header class="navbar" style="margin-bottom: 0px;">
        <div class="container" style="background-color: white;">
            <nav>
              <ul class="nav navbar-nav" style="margin-top: 25px;">
                <!--ログインしている場合のヘッダー-->
                <% if user_signed_in? %>
                  <li><%= link_to "つぶやく", new_tweet_path %></li>
                  <li><%= link_to "マイページ", user_path(current_user) %></li>
                  <li><%= link_to "All.Timeline",tweets_path  %></li>
                  <li>
                    <%= link_to root_path do %>
                    <span><%= image_tag "logo_4.png", :size => "90x80" %></span>
                    <% end %>
                  </li>
                  <li><%= link_to "Follow.Timeline", tweets_following_tweets_path %></li>
                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                  <!--ログインしていない場合のヘッダー-->
                <% else %>
                  <li><%= link_to "about", about_path %></li>
                  <li><%= link_to "タイムラインall", tweets_path %></li>
                  <li>
                    <%= link_to root_path do %>
                    <span><%= image_tag "logo_4.png", :size => "90x80" %></span>
                    <% end %>
                  </li>
                  <li><%= link_to "新規登録", new_user_registration_path %></li>
                  <li><%= link_to "ログイン", new_user_session_path %></li>
                <% end %>
              </ul>
            </nav>
        </div>
  </header>
  <div class="body">
    <%= yield %>
  </div>  
  </body>

</html>

