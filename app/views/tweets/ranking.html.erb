  <div class= "container">
    <div class= "row">
      <div class="col-md-5 col-md-offset-1">
        今月のキャンディー賞</br>
        <% @favorites.each.with_index(1) do |tweet, i| %>
          第 <%= i %>位
          <table class="table">
            <tr>
              <th class="tweet-timeline-th" width="100">
                <%= attachment_image_tag tweet.user, :image, :fill, 100, 100, fallback: "no_image.jpg", class: "img-circle profile-thumb" %>
              <td class="tweet-timeline-td" height="100">
                <%= link_to tweet.user.name, user_path(tweet.user)%>
                <%= tweet.created_at.strftime('%Y年%m月%d日 %H:%M分') %></br>
                <%= tweet.body %></br>
                <%= attachment_image_tag tweet, :image, size:'300x300', format: 'jpg'  %></br>
                <h4>
                  <!--コメント数える-->
                  <%= link_to tweet.tweet_comments.count, tweet_path(tweet.id), class: "far fa-comment" %>
                  
                  <!--いいね機能-->
                  <i class= <%= "tweet_favorite-btn"+tweet.id.to_s %>><%= render "tweet_favorites/tweet_favorite-btn", tweet: tweet %></i>
                  
                  <% if tweet.user == current_user %>
                    <%= link_to "ツイート削除",tweet_path(tweet), method: :delete, "data-confirm"=>"本当に削除しますか？", class:"btn btn-danger" %>
                  <% end %>
                </h4>
              </td>
            </tr>
          </table>
        <% end %>
      </div>
      <div class="col-md-5 col-md-offset-1">
        今月のいいね賞</br>
          <% @comments.each.with_index(1) do |tweet_comment, i|%>
            第 <%= i %>位
            <table>
              <tr>
                <th class="comment-ranking-th" width="100">
                  <%= attachment_image_tag tweet_comment.user, :image, :fill, 100, 100, fallback: "no_image.jpg", class: "img-circle profile-thumb"  %>
                </th>
                <td class="comment-ranking-td" width="100%">
                  <%= link_to tweet_comment.user.name, user_path(tweet_comment.user)%>
                  <%= tweet_comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %></br></br>
                  <%= tweet_comment.comment %></br></br>
                  <h4 class= <%= "comment_favorite-btn"+tweet_comment.id.to_s %>><%= render "comment_favorites/comment_favorite-btn", tweet_comment: tweet_comment %></h4>
                  <% if tweet_comment.user == current_user %> 
                  <%= link_to "コメント削除", tweet_tweet_comment_path(tweet_comment.tweet, tweet_comment), :remote => true, method: :delete, "data-confirm"=>"本当に削除しますか？", class:"btn btn-danger" %></br>
                  <% end %>
                </td>
              </tr>
            </table>
          <% end %>
      </div>
    </div>
  </div>